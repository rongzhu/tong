@{
    if (ViewBag.Title == null) { ViewBag.Title = "Tong Brothers"; }
    string action = ViewContext.RouteData.Values["action"].ToString().ToLower();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="free website template" />
    <meta name="keywords" content="enter your keywords here" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("head", false)

	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-53452708-1', 'auto');
		ga('send', 'pageview');
	</script>

</head>
<body>
    <div id="main">
        <div id="header">
            <div id="banner">
                <div id="welcome">
                    <h1><a href="/">Tong Brothers</a></h1>
                </div>
                <!--close welcome-->
                <div id="menubar">
                    <ul id="menu">
                        <li class="@(action == "default" ? "current" : "")"><a href="~/">Home</a></li>
                        <li class="@(action == "gallery" ? "current" : "")"><a href="~/gallery">Product Gallery</a></li>
                        <li class="@(action == "contactus" ? "current" : "")"><a href="~/contactus">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="site_content">

        @RenderBody()

        </div>

        <div id="content_grey">
            <p>2014 Tong Brothers. All rights reserved.</p>
        </div>
		<br /><br />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
